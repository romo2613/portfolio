---
interface Props {
    img: string
}

const { img } = Astro.props
---
<div class="card card-side bg-base-100 shadow-xl">
    <div class="flex flex-col xl:flex-row">
        <figure class="w-full xl:w-2/6 p-4 rounded">
            <img
                src={img}
                alt={img}
            />
        </figure>
        <div class="card-body w-full lg:w-4/5 ">
            <slot />
        </div>
    </div>
</div>
