---
interface Props{
    image: string
    class?: string
}

const { image, class: className} = Astro.props
---
<div class=`card w-96 bg-base-100 shadow-xl ${className}`>
    <figure><img src={image} alt={image} /></figure>
    <div class="card-body">
      <h2 class="card-title">
        <slot name="title" />
      </h2>
      <div class="flex flex-col">
        <slot name="text" />
        <div class="card-actions h-full">
          <slot name="content"/>
        </div>
      </div>
    </div>
  </div>