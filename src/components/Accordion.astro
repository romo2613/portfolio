---
interface Props {
    isChecked: boolean
    title: string
}

const { isChecked=false, title } = Astro.props
---

<div class="collapse collapse-arrow bg-base-200">
    <input type="radio" name="my-accordion-2" checked={isChecked && "checked"} />
    <div class="collapse-title text-xl font-medium">
        {title}
    </div>
    <div class="collapse-content">
        <slot />
    </div>
</div>
